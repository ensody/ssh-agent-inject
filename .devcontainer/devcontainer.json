{
	"name": "Dev",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		// Together with ssh-agent-inject this allows ssh-agent access from within the container.
		"-l", "com.ensody.ssh-agent-inject",
		// Additionally we copy the .ssh folder into the container (see postCreateCommand below) to
		// reuse the host's ssh config and known_hosts.
		"-v", "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh-localhost:ro",
	],
	"postCreateCommand": "mkdir -p ~/.ssh && cp -r ~/.ssh-localhost/* ~/.ssh && chmod 700 ~/.ssh && chmod 600 ~/.ssh/*",
	"extensions": [
		"ms-vscode.go",
	],
}